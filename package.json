{
  "name": "node-play",
  "version": "1.0.0",
  "description": "playground for nodejs",
  "author": "bontaramsonta",
  "license": "ISC",
  "main": "dist/main.js",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/main.ts",
    "start": "ts-node src/main.ts",
    "build": "tsc",
    "preview": "node dist/main.js"
  },
  "nodemonConfig": {
    "events": {
      "start": "clear"
    }
  },
  "packageManager": "pnpm@8.8.0",
  "engineStrict": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "dependencies": {
    "dotenv": "^16.3.1",
    "express": "5.0.0-beta.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.18",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
